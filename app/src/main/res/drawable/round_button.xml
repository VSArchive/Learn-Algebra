<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/yellow2" android:startColor="@color/yellow1" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/orange4" android:startColor="@color/yellow2" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/orange4" android:startColor="@color/orange5" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>